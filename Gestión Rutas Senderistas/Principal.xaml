<Window x:Class="Gestión_Rutas_Senderistas.Principal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gestión_Rutas_Senderistas"
        mc:Ignorable="d"
        Title="Principal" Height="450" Width="800">
    <Grid x:Name="Grid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="81*"/>
            <ColumnDefinition Width="570*"/>
            <ColumnDefinition Width="149*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="57*"/>
            <RowDefinition Height="324*"/>
            <RowDefinition Height="53*"/>
        </Grid.RowDefinitions>
        <TabControl Grid.Column="1" Grid.ColumnSpan="1" Grid.RowSpan="2" Margin="0,57,0,0">
            <TabItem Header="Rutas" Margin="-2,-2,-5,0">
                <Grid Background="#FFE5E5E5" Margin="0,0,-1,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="118*"/>
                        <RowDefinition Height="23*"/>
                        <RowDefinition Height="7*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="10*"/>
                        <ColumnDefinition Width="141*"/>
                        <ColumnDefinition Width="414*"/>
                    </Grid.ColumnDefinitions>
                    <ListBox HorizontalAlignment="Center" Height="188" VerticalAlignment="Center" Width="136" d:ItemsSource="{d:SampleData ItemCount=5}" Grid.Column="1"/>
                    <Button x:Name="BtnAddRuta" Grid.Column="1" Content="Añadir Ruta" HorizontalAlignment="Center" Grid.Row="1" VerticalAlignment="Center" FontSize="16" Background="#FFF1F0F0" BorderBrush="#FF444444"/>
                </Grid>
            </TabItem>
            <TabItem Header="Guías Senderistas" Margin="5,-2,-8,0">
                <Grid Background="#FFE5E5E5" Margin="0,0,-1,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="118*"/>
                        <RowDefinition Height="23*"/>
                        <RowDefinition Height="7*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="10*"/>
                        <ColumnDefinition Width="141*"/>
                        <ColumnDefinition Width="414*"/>
                    </Grid.ColumnDefinitions>
                    <ListBox HorizontalAlignment="Center" Height="188" VerticalAlignment="Center" Width="136" d:ItemsSource="{d:SampleData ItemCount=5}" Grid.Column="1"/>
                    <Button x:Name="BtnAddGuia" Grid.Column="1" Content="Añadir Guía" HorizontalAlignment="Center" Grid.Row="1" VerticalAlignment="Center" FontSize="16" Background="#FFF1F0F0" BorderBrush="#FF444444"/>
                </Grid>
            </TabItem>
            <TabItem Header="Excursionistas" Margin="8,-2,-14,0">
                <Grid Background="#FFE5E5E5" Margin="0,0,-1,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="118*"/>
                        <RowDefinition Height="23*"/>
                        <RowDefinition Height="7*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="10*"/>
                        <ColumnDefinition Width="141*"/>
                        <ColumnDefinition Width="414*"/>
                    </Grid.ColumnDefinitions>
                    <ListBox HorizontalAlignment="Center" Height="188" VerticalAlignment="Center" Width="136" d:ItemsSource="{d:SampleData ItemCount=5}" Grid.Column="1"/>
                </Grid>
            </TabItem>
        </TabControl>
        <Menu x:Name="AYUDA" HorizontalAlignment="Center" Height="37" VerticalAlignment="Center" Width="56">
            <MenuItem Header="AYUDA" Height="40" Width="58" >
                <MenuItem x:Name="miGuardar" Header="Guardar">
                </MenuItem>
            </MenuItem>
        </Menu>
        <Label x:Name="InfoUser" Grid.Column="2" Content="Usuario: Admin" Margin="10,131,9,0" Grid.Row="1" FontSize="17" Height="34" VerticalAlignment="Top" HorizontalAlignment="Center"/>
        <Image x:Name="Img_User" Source="/Recursos/User_Icon.png" Grid.Column="2" HorizontalAlignment="Center" Margin="0,34,0,0" VerticalAlignment="Top" Grid.RowSpan="2" Height="149" Width="149"/>
    </Grid>
</Window>
